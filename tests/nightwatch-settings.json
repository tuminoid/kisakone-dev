{
  "src_folders": ["cases"],
  "output_folder": "reports",
  "custom_commands_path": "",
  "live_output": true,
  "parallel_process_delay" : 10,
  "disable_colors": false,

  "selenium": {
    "start_process": false,
    "server_path": "",
    "log_path": "/tmp/selenium.log",
    "host": "127.0.0.1",
    "port": 4444
  },

  "test_settings" : {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : ""
      },
      "desiredCapabilities": {
        "binary": "/usr/bin/chromium-browser",
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": ["start-fullscreen"]
        }
      }
    }
  }
}
